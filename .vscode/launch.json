    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Test Neural Network - CPU",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/test_nn.py",
            "args": ["test_gradients"],
            "console": "integratedTerminal"
        },
        {
            "name": "Test Neural Network - GPU",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/test_nn.py",
            "args": ["test_gradients", "True"],
            "console": "integratedTerminal"
        },
        {
            "name": "Train Neural Network - CPU",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/train.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Train Neural Network - GPU",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/train.py",
            "args": ["True"],
            "console": "integratedTerminal"
        }
    ]
}
