    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Test Neural Network Gradients - CPU",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/test_nn.py",
            "args": ["test_gradients"],
            "console": "integratedTerminal"
        },
        {
            "name": "Test Neural Network Gradients - GPU",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/test_nn.py",
            "args": ["test_gradients", "True"],
            "console": "integratedTerminal"
        },
        {
            "name": "Test Neural Network CPU-GPU Identity",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/test_nn.py",
            "args": ["test_identity"],
            "console": "integratedTerminal"
        },
        {
            "name": "Train Neural Network - CPU in console mode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/train.py",
            "args": ["False", "True", "True", "False"],
            "console": "integratedTerminal"
        },
        {
            "name": "Train Neural Network - GPU in console mode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/train.py",
            "args": ["True", "True", "True", "False"],
            "console": "integratedTerminal"
        },
        {
            "name": "Train Neural Network - CPU in website mode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/train.py",
            "args": ["False", "False", "False", "False"],
            "console": "integratedTerminal"
        },
        {
            "name": "Train Neural Network - GPU in website mode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/train.py",
            "args": ["True", "False", "False", "False"],
            "console": "integratedTerminal"
        }
    ]
}
